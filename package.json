{
  "name": "rennan-blog-api",
  "version": "1.0.0",
  "description": "",
  "author": "Rennan",
  "private": true,
  "license": "MIT",
  "engines": {
    "npm": ">=10",
    "node": "22"
  },
  "prisma": {
    "seed": "ts-node prisma/seeds/index.ts"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:debug": "nest start --debug api:9229 --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "create-env": "printenv > .env",
    "prisma:pull": "prisma db pull",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:create": "prisma migrate dev --name ",
    "prisma:seed": "ts-node prisma/seeds/index.ts",
    "module:create": "node ./packages/create-modules/dist/index.js",
    "module:create:format": "node ./packages/create-modules/dist/index.js && yarn format",
    "container:terminal": "docker exec -it cd_backend /bin/sh",
    "generate:doc": "@compodoc/compodoc -p tsconfig.json -s"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.15.2",
    "@nestjs/common": "^11.0.17",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.17",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.17",
    "@nestjs/swagger": "^11.1.3",
    "@prisma/adapter-pg": "^6.6.0",
    "@prisma/client": "^6.6.0",
    "axios": "^1.8.4",
    "basic-auth": "^2.0.1",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "firebase-admin": "^13.2.0",
    "moment-timezone": "^0.5.48",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.26",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.0.17",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.2",
    "prisma": "^6.6.0",
    "prisma-models": "^0.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "resolutions": {
    "chokidar": "^3.6.0"
  }
}